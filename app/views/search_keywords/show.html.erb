<div class="container text-center">
    <div class="row">
        <div class="col-4">
            <div class="table-box">
                <div class="profile">
                    <img src=<%= @results["response"]["artist"]["image_url"]%> style="width:10em;height:10em">
                    <h2><%= @results["response"]["artist"]["name"]%></h2>
                </div>

                <div class="social-media">
                    <h5>Facebook: <a href="https://www.facebook.com/<%= @results["response"]["artist"]["facebook_name"]%>"><%= @results["response"]["artist"]["facebook_name"]%></a></h5>
                    <h5>Instagram: <a href="https://www.instagram.com/<%= @results["response"]["artist"]["instagram_name"]%>"><%= @results["response"]["artist"]["instagram_name"]%></a></h5>
                </div>
            </div>
        </div>

        <div class="col-8">
            <div class="table-box">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th><h4><%= @results["response"]["artist"]["name"]%> SONGS</h4></th>
                        </tr>   
                    </thead> 
                    <tbody>
                        <% @songs["response"]["songs"].each do |song|%>
                            <tr>
                                <td><%= link_to song["title"], song_path(song["id"])%></td>
                            </tr>
                        <%end%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>